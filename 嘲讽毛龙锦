    <script>
        function a() {
            var widtha = document.documentElement.clientWidth;
            alert('你的屏幕宽度是：'+widtha)
            if (widtha < 550){
                document.getElementById("div").style.display = "block";
                document.getElementById("beijing").style.display = "block";
            }
        }
    </script>
